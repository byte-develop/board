{
  "server": {
    "port": 5000,
    "cors": {
      "origin": ["http://localhost:3000", "http://localhost:5000"],
      "credentials": true
    }
  },
  "database": {
    "type": "postgresql",
    "ssl": true,
    "maxConnections": 20,
    "idleTimeout": 30000
  },
  "session": {
    "secret": "your-session-secret-change-in-production",
    "name": "taskflow.sid",
    "maxAge": 86400000,
    "secure": false,
    "httpOnly": true,
    "sameSite": "lax"
  },
  "auth": {
    "bcryptRounds": 12,
    "tokenExpiration": "24h"
  },
  "app": {
    "name": "TaskFlow Pro",
    "description": "Smart Project Management",
    "version": "1.0.0"
  },
  "features": {
    "aiAssistant": true,
    "notifications": false,
    "analytics": true
  }
}